<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="30dip"/>
            <stroke android:width="1dip" android:color="#11b828"/>
            <gradient android:angle="-90" android:startColor="#2db451"
                android:endColor="#2d6430"/>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="11dip"/>
            <stroke android:width="1dip" android:color="#11b828"/>
            <solid android:color="#18bc6a"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="30dip"/>
            <stroke android:width="1dip" android:color="#11b828"/>
            <gradient android:angle="-90" android:startColor="#39bd4f"
                android:endColor="#ca422d"/>
        </shape>

    </item>

</selector>